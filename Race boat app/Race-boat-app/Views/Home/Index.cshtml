@* News ----------------------------------------- *@
<div class="container">
    <div class="text-center" style="padding-top: 30px">
        <h2>Upcoming Events</h2>
    </div>
    <div class="row">
        @foreach (var e in events)
        {
            if (DateTime.ParseExact(e.Date, "yyyy-M-d", null) >= DateTime.Today
                        && DateTime.ParseExact(e.Date, "yyyy-M-d", null) <= DateTime.Today.AddDays(30))

            {
                eDate.Add(e);
                eDate.Sort((d1, d2) => d1.Date.CompareTo(d2.Date));
            }
        }
        @foreach (var e in eDate)
        {
            <div class="col-sm-4 event">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@e.Name</h5>
                        <p class="card-text">@e.Location</p>
                        <p class="card-text">@e.Date</p>
                        <p class="card-text">@e.TimeStart - @e.TimeEnd</p>
                    </div>
                </div>
            </div>
         }
    </div>
</div>


