    <div class="container">
        <div class="row">
            @foreach (var user in users)
            {
                <div class="col-sm-4">
                    <div class="card user-card">
                        <img class="card-img-top" src="~/images/profile.jpg" alt="Card image cap">
                        <div class="card-body user-card-body text-center">
                            @if (Context.Session.GetString("_Admin") == "true")
                            {
                                <h5 class="card-title">@user.FirstName&nbsp;@user.LastName</h5>
                                <p class="card-text">
                                    <span>@user.Email</span><br />
                                    <span>Team: @user.Team</span><br />
                                    <span>Phone: @user.PhoneNumber</span>
                                </p>
                                <div>
                                    <a href="#"><i class="fab fa-dribbble"></i></a>
                                    <a href="#"><i class="fab fa-twitter"></i></a>
                                    <a href="#"><i class="fab fa-linkedin"></i></a>
                                    <a href="#"><i class="fab fa-facebook"></i></a>
                                </div>
                                @*<a href="#" class="btn btn-primary">Contact @user.FirstName</a>*@

                                <p style="margin:0px;">
                                    <button class="user-card-button">Contact @user.FirstName</button>
                                </p>
                            }
                            @if (Context.Session.GetString("_Admin") == "false")
                            {

                                <p>You Don't have permision to access this</p>

                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

