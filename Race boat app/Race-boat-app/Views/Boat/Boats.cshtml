    <div class="container">
        <div class="row">
            @foreach (var user in users)
            {
                <div class="col-sm-4">
                    <div class="card user-card">
                        <img class="card-img-top" src="~/images/profile.jpg" alt="Card image cap">
                        <div class="card-body user-card-body text-center">
                            @if (Context.Session.GetString("_Admin") == "true")
                            {
                                
                                <p class="card-text">
                                    <span>ID: @user.Id </span><br />
